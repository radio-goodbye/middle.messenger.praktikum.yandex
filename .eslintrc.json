{
    "extends": "airbnb-typescript/base",
    "parser": "@typescript-eslint/parser",
    "plugins": [
        "@typescript-eslint",
        "import"
    ],
    "rules": {
        "max-len": [
            2,
            150
        ],
        "@typescript-eslint/no-unused-vars": 2,
        "@typescript-eslint/no-loop-func": 0
    },
    "ignorePatterns": [
        "dist",
        "src/**/*.js",
        "node_modules"
    ],
    "parserOptions": {
        "project": [
            "tsconfig.json"
        ]
    }
}